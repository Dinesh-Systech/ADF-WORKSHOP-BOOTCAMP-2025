{
	"name": "DF_Activation_Master_IN1689",
	"properties": {
		"folder": {
			"name": "END TO END WORKSHOP/STG TO DW"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_AzureSQLtable_TGT_IN1689",
						"type": "DatasetReference"
					},
					"name": "SrcActivationMaster"
				}
			],
			"sinks": [
				{
					"name": "SinkAlcActivationMasterN1677"
				}
			],
			"transformations": [
				{
					"name": "PromotionKey"
				},
				{
					"name": "NullHandling"
				},
				{
					"name": "Transformation"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PromotionCode as string,",
				"          PromotionKey as integer,",
				"          PromotionDescription as string,",
				"          PromotionType as string,",
				"          ProductLevelCode as string,",
				"          EffectiveFrom as date,",
				"          EffectiveTo as date,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SrcActivationMaster",
				"Transformation keyGenerate(output(PromotionKey as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> PromotionKey",
				"PromotionKey derive(each(match(type=='string'), $$ = iif(isNull($$)||lower($$)=='null','UNK',$$)),",
				"          each(match(type=='integer'), $$ = iif(isNull($$),-1,toInteger($$))),",
				"          each(match(type=='timestamp'), $$ = iif(isNull($$),toTimestamp('31/12/2999'),$$))) ~> NullHandling",
				"SrcActivationMaster derive(EffectiveFrom = toDate(EffectiveFrom, 'dd-MM-yyyy'),",
				"          EffectiveTo = toDate(EffectiveTo,'dd-MM-yyyy'),",
				"          UpdatedAt = toTimestamp(null())) ~> Transformation",
				"NullHandling sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     format: 'table') ~> SinkAlcActivationMasterN1677"
			]
		}
	}
}