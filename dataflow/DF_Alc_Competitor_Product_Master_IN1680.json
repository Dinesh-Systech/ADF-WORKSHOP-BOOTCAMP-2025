		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SRCstgcompetitors"
				},
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SRCtgtCustomer"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SNKtgtCustomer"
				},
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SNKtgtUpdate"
				}
			],
			"transformations": [
				{
					"name": "selectTgt"
				},
				{
					"name": "LeftJoinStgAndTgt"
				},
				{
					"name": "insert"
				},
				{
					"name": "updatedAt"
				},
				{
					"name": "SLCTsrccols"
				},
				{
					"name": "SLCTtgtUpdate"
				},
				{
					"name": "AlterUpdate"
				},
				{
					"name": "NullHandling"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SKUCode as integer,",
				"          ItemName as string,",
				"          CompanyCode as string,",
				"          IndustryName as string,",
				"          BrandFamily as string,",
				"          BrandCode as string,",
				"          BrandName as string,",
				"          ReportingSegment as string,",
				"          BrandPackSize as string,",
				"          PackTypeCode as string,",
				"          BrandPackType as string,",
				"          State_Code as string,",
				"          State as string,",
				"          ProductCategory as string,",
				"          ProductSegment as string,",
				"          Flavour as string,",
				"          SubFlavour as string,",
				"          Division as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCstgcompetitors",
				"source(output(",
				"          SKUCode as integer,",
				"          SKUkey as integer,",
				"          ItemName as string,",
				"          CompanyCode as string,",
				"          IndustryName as string,",
				"          BrandFamily as string,",
				"          BrandCode as string,",
				"          BrandName as string,",
				"          ReportingSegment as string,",
				"          BrandPackSize as string,",
				"          PackTypeCode as string,",
				"          BrandPackType as string,",
				"          State_Code as string,",
				"          State as string,",
				"          ProductCategory as string,",
				"          ProductSegment as string,",
				"          Flavour as string,",
				"          SubFlavour as string,",
				"          Division as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCtgtCustomer",
				"SRCtgtCustomer select(mapColumn(",
				"          each(match(true()),",
				"               'tgt_'+$$ = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectTgt",
				"SRCstgcompetitors, selectTgt join(SKUCode == tgt_SKUCode,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> LeftJoinStgAndTgt",
				"LeftJoinStgAndTgt split(isNull(tgt_SKUCode),",
				"     !isNull(tgt_SKUCode) && (ReportingSegment!=tgt_ReportingSegment ||ProductSegment!=tgt_ProductSegment),",
				"     disjoint: true) ~> insert@(insert, update)",
				"SLCTtgtUpdate derive(UpdatedAt = currentTimestamp(),",
				"          UpdatedBy = 'PL_Alc_Competitor_Product_Master_IN1680') ~> updatedAt",
				"NullHandling select(mapColumn(",
				"          SKUCode,",
				"          ItemName,",
				"          CompanyCode,",
				"          IndustryName,",
				"          BrandFamily,",
				"          BrandCode,",
				"          BrandName,",
				"          ReportingSegment,",
				"          BrandPackSize,",
				"          PackTypeCode,",
				"          BrandPackType,",
				"          State_Code,",
				"          State,",
				"          ProductCategory,",
				"          ProductSegment,",
				"          Flavour,",
				"          SubFlavour,",
				"          Division,",
				"          CreatedAt,",
				"          UpdatedAt,",
				"          CreatedBy,",
				"          UpdatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTsrccols",
				"insert@update select(mapColumn(",
				"          ReportingSegment,",
				"          ProductSegment,",
				"          UpdatedAt,",
				"          UpdatedBy,",
				"          SKUCode = tgt_SKUCode,",
				"          ItemName = tgt_ItemName,",
				"          CompanyCode = tgt_CompanyCode,",
				"          IndustryName = tgt_IndustryName,",
				"          BrandFamily = tgt_BrandFamily,",
				"          BrandCode = tgt_BrandCode,",
				"          BrandName = tgt_BrandName,",
				"          BrandPackSize = tgt_BrandPackSize,",
				"          PackTypeCode = tgt_PackTypeCode,",
				"          BrandPackType = tgt_BrandPackType,",
				"          State_Code = tgt_State_Code,",
				"          State = tgt_State,",
				"          ProductCategory = tgt_ProductCategory,",
				"          Flavour = tgt_Flavour,",
				"          SubFlavour = tgt_SubFlavour,",
				"          Division = tgt_Division,",
				"          CreatedAt = tgt_CreatedAt,",
				"          CreatedBy = tgt_CreatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTtgtUpdate",
				"updatedAt alterRow(updateIf(true())) ~> AlterUpdate",
				"insert@insert derive(each(match(type=='string'), $$ = iifNull($$, 'UNK')),",
				"          each(match(type=='integer'), $$ = iifNull($$, -1)),",
				"          each(match(type=='timestamp'), $$ = iifNull($$, toTimestamp('2999-12-31 00:00:00', 'yyyy-MM-dd HH:mm:ss')))) ~> NullHandling",
				"SLCTsrccols sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtCustomer",
				"AlterUpdate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['SKUCode'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtUpdate"
			]
		}
	}
}