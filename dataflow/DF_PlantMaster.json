{
	"name": "DF_PlantMaster",
	"properties": {
		"folder": {
			"name": "End to End Workshop/Stg to Tgt"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_AzureSql_IN1684",
						"type": "DatasetReference"
					},
					"name": "SRCPlant"
				},
				{
					"dataset": {
						"referenceName": "DS_AzureSql_IN1684",
						"type": "DatasetReference"
					},
					"name": "TGTPlant"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_AzureSql_IN1684",
						"type": "DatasetReference"
					},
					"name": "SNKPlant"
				}
			],
			"transformations": [
				{
					"name": "selectSRC"
				},
				{
					"name": "selectTGT"
				},
				{
					"name": "joinSRCComapnyAndTGTCompany"
				},
				{
					"name": "alterInsert"
				},
				{
					"name": "NullHandling"
				},
				{
					"name": "union"
				},
				{
					"name": "PlantKey"
				},
				{
					"name": "SelectSRCOrder"
				},
				{
					"name": "split1"
				},
				{
					"name": "alterUpdate"
				},
				{
					"name": "Default"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PlantCode as string,",
				"          PlantName as string,",
				"          CompanyCode as integer,",
				"          StateCode as string,",
				"          StateName as string,",
				"          {Created By} as string,",
				"          {Created Date} as timestamp,",
				"          {Updated By} as string,",
				"          {Updated Date} as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCPlant",
				"source(output(",
				"          PlantCode as string,",
				"          PlantKey as integer,",
				"          PlantName as string,",
				"          CompanyCode as integer,",
				"          StateCode as string,",
				"          StateName as string,",
				"          {Created By} as string,",
				"          {Created Date} as timestamp,",
				"          {Updated By} as string,",
				"          {Updated Date} as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> TGTPlant",
				"SRCPlant select(mapColumn(",
				"          each(match(true()),",
				"               \"SRC_\"+$$ = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectSRC",
				"TGTPlant select(mapColumn(",
				"          each(match(true()),",
				"               \"TGT_\"+$$ = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectTGT",
				"selectSRC, selectTGT join(SRC_PlantCode == TGT_PlantCode,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinSRCComapnyAndTGTCompany",
				"split1@Insert alterRow(insertIf(true())) ~> alterInsert",
				"union derive(each(match(type == 'string'), $$ = iif(isNull($$) || $$ == 'NULL', 'UNK', $$)),",
				"          each(match(type == 'int'), $$ = iifNull($#, -1)),",
				"          each(match(type == 'timestamp'), $$ = iifNull($$, toTimestamp('2999-12-31 00:00:00', 'yyyy-MM-dd HH:mm:ss')))) ~> NullHandling",
				"alterInsert, alterUpdate union(byName: true)~> union",
				"Default keyGenerate(output(PlantKey as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> PlantKey",
				"PlantKey select(mapColumn(",
				"          PlantCode = SRC_PlantCode,",
				"          PlantKey,",
				"          PlantName = SRC_PlantName,",
				"          CompanyCode = SRC_CompanyCode,",
				"          StateCode = SRC_StateCode,",
				"          StateName = SRC_StateName,",
				"          {Created By} = {SRC_Created By},",
				"          {Created Date} = {SRC_Created Date},",
				"          {Updated By} = {SRC_Updated By},",
				"          {Updated Date} = {SRC_Updated Date}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectSRCOrder",
				"joinSRCComapnyAndTGTCompany split(isNull(TGT_PlantCode),",
				"     SRC_PlantCode == TGT_PlantCode && (SRC_PlantName != TGT_PlantName),",
				"     disjoint: false) ~> split1@(Insert, Update)",
				"split1@Update alterRow(updateIf(true())) ~> alterUpdate",
				"NullHandling derive({SRC_Updated Date} = toTimestamp(\"2999-12-31 00:00:00\",\"yyyy-MM-dd HH:mm:ss\")) ~> Default",
				"SelectSRCOrder sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          PlantCode,",
				"          PlantKey,",
				"          PlantName,",
				"          CompanyCode,",
				"          StateCode,",
				"          StateName,",
				"          {Created By},",
				"          {Created Date},",
				"          {Updated By},",
				"          {Updated Date}",
				"     )) ~> SNKPlant"
			]
		}
	}
}