{
	"name": "DF_Alc_Plant_Master_IN1680",
	"properties": {
		"folder": {
			"name": "stg - dw"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SRCstgplant"
				},
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SRCtgtPlant"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SNKtgtplant"
				},
				{
					"dataset": {
						"referenceName": "DS_Azure_sql_IN1680",
						"type": "DatasetReference"
					},
					"name": "SNKtgtUpdate"
				}
			],
			"transformations": [
				{
					"name": "selectTgt"
				},
				{
					"name": "LeftJoinStgAndTgt"
				},
				{
					"name": "insert"
				},
				{
					"name": "updatedAt"
				},
				{
					"name": "SLCTsrccols"
				},
				{
					"name": "SLCTtgtUpdate"
				},
				{
					"name": "Transformation"
				},
				{
					"name": "NullHandling"
				},
				{
					"name": "AlterUpdate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PlantCode as string,",
				"          PlantName as string,",
				"          CompanyCode as integer,",
				"          StateCode as string,",
				"          StateName as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCstgplant",
				"source(output(",
				"          PlantCode as string,",
				"          PlantKey as integer,",
				"          PlantName as string,",
				"          CompanyCode as integer,",
				"          StateCode as string,",
				"          StateName as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCtgtPlant",
				"SRCtgtPlant select(mapColumn(",
				"          each(match(true()),",
				"               'tgt_'+$$ = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectTgt",
				"SRCstgplant, selectTgt join(PlantCode == tgt_PlantCode,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> LeftJoinStgAndTgt",
				"LeftJoinStgAndTgt split(isNull(tgt_PlantCode),",
				"     !isNull(tgt_PlantCode) && (PlantName!=tgt_PlantName),",
				"     disjoint: true) ~> insert@(insert, update)",
				"SLCTtgtUpdate derive(UpdatedAt = currentTimestamp(),",
				"          UpdatedBy = 'PL_Alc_Plant_Master_IN1680') ~> updatedAt",
				"Transformation select(mapColumn(",
				"          PlantCode,",
				"          PlantName,",
				"          CompanyCode,",
				"          StateCode,",
				"          StateName,",
				"          CreatedAt,",
				"          UpdatedAt,",
				"          CreatedBy,",
				"          UpdatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTsrccols",
				"insert@update select(mapColumn(",
				"          PlantName,",
				"          UpdatedAt,",
				"          UpdatedBy,",
				"          PlantCode = tgt_PlantCode,",
				"          CompanyCode = tgt_CompanyCode,",
				"          StateCode = tgt_StateCode,",
				"          StateName = tgt_StateName,",
				"          CreatedAt = tgt_CreatedAt,",
				"          CreatedBy = tgt_CreatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTtgtUpdate",
				"NullHandling derive(PlantCode = left(concat(PlantCode, '000000'),6)) ~> Transformation",
				"insert@insert derive(each(match(type=='string'), $$ = iifNull($$, 'UNK')),",
				"          each(match(type=='integer'), $$ = iifNull($$, -1)),",
				"          each(match(type=='timestamp'), $$ = iifNull($$, toTimestamp('2999-12-31 00:00:00', 'yyyy-MM-dd HH:mm:ss')))) ~> NullHandling",
				"updatedAt alterRow(updateIf(true())) ~> AlterUpdate",
				"SLCTsrccols sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtplant",
				"AlterUpdate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['PlantCode'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtUpdate"
			]
		}
	}
}