					"name": "NullHandle"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CompanyCode as string,",
				"          CompanyName as string,",
				"          SalesOrgCode as string,",
				"          SalesOrgName as string,",
				"          ReportingHierarchyCode1 as string,",
				"          ReportingHierarchyName1 as string,",
				"          ReportingHierarchyCode2 as string,",
				"          ReportingHierarchyName2 as string,",
				"          ReportingHierarchyCode3 as string,",
				"          ReportingHierarchyName3 as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCstgcustomer",
				"source(output(",
				"          CompanyCode as string,",
				"          CompanyKey as integer,",
				"          CompanyName as string,",
				"          SalesOrgCode as string,",
				"          SalesOrgName as string,",
				"          ReportingHierarchyCode1 as string,",
				"          ReportingHierarchyName1 as string,",
				"          ReportingHierarchyCode2 as string,",
				"          ReportingHierarchyName2 as string,",
				"          ReportingHierarchyCode3 as string,",
				"          ReportingHierarchyName3 as string,",
				"          CreatedAt as timestamp,",
				"          UpdatedAt as timestamp,",
				"          CreatedBy as string,",
				"          UpdatedBy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SRCtgtCustomer",
				"SRCtgtCustomer select(mapColumn(",
				"          each(match(true()),",
				"               'tgt_'+$$ = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectTgt",
				"SRCstgcustomer, selectTgt join(CompanyCode == tgt_CompanyCode,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> LeftJoinStgAndTgt",
				"LeftJoinStgAndTgt split(isNull(tgt_CompanyCode),",
				"     !isNull(tgt_CompanyCode) && (SalesOrgCode!=tgt_SalesOrgCode ||SalesOrgName!=tgt_SalesOrgName),",
				"     disjoint: true) ~> insert@(insert, update)",
				"SLCTtgtUpdate derive(UpdatedAt = currentTimestamp(),",
				"          UpdatedBy = 'PL_Alc_Company_Master_IN1680') ~> updatedAt",
				"NullHandle select(mapColumn(",
				"          CompanyCode,",
				"          CompanyName,",
				"          SalesOrgCode,",
				"          SalesOrgName,",
				"          ReportingHierarchyCode1,",
				"          ReportingHierarchyName1,",
				"          ReportingHierarchyCode2,",
				"          ReportingHierarchyName2,",
				"          ReportingHierarchyCode3,",
				"          ReportingHierarchyName3,",
				"          CreatedAt,",
				"          UpdatedAt,",
				"          CreatedBy,",
				"          UpdatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTsrccols",
				"insert@update select(mapColumn(",
				"          SalesOrgCode,",
				"          SalesOrgName,",
				"          UpdatedAt,",
				"          UpdatedBy,",
				"          CompanyCode = tgt_CompanyCode,",
				"          CompanyName = tgt_CompanyName,",
				"          ReportingHierarchyCode1 = tgt_ReportingHierarchyCode1,",
				"          ReportingHierarchyName1 = tgt_ReportingHierarchyName1,",
				"          ReportingHierarchyCode2 = tgt_ReportingHierarchyCode2,",
				"          ReportingHierarchyName2 = tgt_ReportingHierarchyName2,",
				"          ReportingHierarchyCode3 = tgt_ReportingHierarchyCode3,",
				"          ReportingHierarchyName3 = tgt_ReportingHierarchyName3,",
				"          CreatedAt = tgt_CreatedAt,",
				"          CreatedBy = tgt_CreatedBy",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SLCTtgtUpdate",
				"updatedAt alterRow(updateIf(true())) ~> AlterUpdate",
				"insert@insert derive(each(match(type=='string'), $$ = iifNull($$, 'UNK')),",
				"          each(match(type=='integer'), $$ = iifNull($$, -1)),",
				"          each(match(type=='timestamp'), $$ = iifNull($$, toTimestamp('2999-12-31 00:00:00', 'yyyy-MM-dd HH:mm:ss')))) ~> NullHandle",
				"SLCTsrccols sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtCustomer",
				"AlterUpdate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['CompanyCode'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SNKtgtUpdate"
			]
		}
	}
}